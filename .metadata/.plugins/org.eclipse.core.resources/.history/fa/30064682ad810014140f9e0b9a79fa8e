import java.util.Random;

/**
 * 
 * @author Derek Wider
 *
 */
public class Elimination {
	private boolean[] tabs;
	private Random rand;
	private int diceA;
	private int diceB;
	private int finalScore;
	public Elimination(){
		tabs = new boolean[12];
		rand = new Random();
		diceA = 0;
		diceB = 0;
		finalScore = 0;
		clearBoard();
	}
	public void clearBoard(){
		for(int i = 0; i < tabs.length; i++){
			tabs[i] = false;
		}
		finalScore = 0;
	}
	public void rollDice(){
		diceA = rand.nextInt(6) + 1;
		diceB = rand.nextInt(6) + 1;
	}
	public String getNewDiceRolls(){
		String rolls = "";
		rollDice();
		rolls += "DiceA is: " + diceA + " and DiceB is: " + diceB;
		return rolls;
	}
	public int getFinalScore(){
		calculateScore();
		return finalScore;
	}
	public int changeArray(String input){
		int isEmpty = 0;
		if(input.equalsIgnoreCase("d")){
			if(tabs[diceA - 1] || tabs[diceB - 1]){
				isEmpty = 1;
			}
			else{
				tabs[diceA - 1] = true;
				tabs[diceB - 1] = true;
			}
		}
		else if(input.equalsIgnoreCase("s")){
			if(tabs[(diceA - 1) + (diceB)]){
				isEmpty = 1;
			}
			else{
				tabs[(diceA - 1) + (diceB)] = true;
			}
		}
		else if(input.equalsIgnoreCase("q")){
			isEmpty = 2;
		}
		else{
			isEmpty = 3;
		}
		return isEmpty;
	}
	private void calculateScore(){
		for(int i = 0; i < tabs.length; i++){
			if(!tabs[i]){
				finalScore += (i + 1);
			}
		}
	}
	public String toString(){
		String arrayString = "\n";
		for(int i = 0; i < (tabs.length - 2); i++){
			if(tabs[i]){
				arrayString += " X";
			}
			else{
				arrayString += " -";
			}
		}
		for(int i = 10; i < tabs.length; i++){
			if(tabs[i]){
				arrayString += "  X";
			}
			else{
				arrayString += "  -";
			}
		}
		arrayString += "\n";
		for(int i = 0; i < tabs.length; i++){
			arrayString += " " + (i + 1) ;
		}
		return arrayString;
	}
}
